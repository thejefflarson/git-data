#!/usr/bin/env bash
set -e
[ -n "$GD_DEBUG" ] && set -x
set -o errtrace
set -o errexit
set -o pipefail

get_remote() {
  echo $(git config --get git-data.origin.url)
}

file_name() {
  local sha=$1
  echo "git-data-$sha"
}

# http://docs.amazonwebservices.com/AmazonS3/latest/dev/RESTAuthentication.html

tmpfile(){
  echo $(mktemp git-data.XXXXXXXXX)
}

git_dir(){
  echo $(git rev-parse --git-dir)
}

root_dir(){
  echo $(git rev-parse --show-toplevel)
}

object_dir(){
  echo $(root_dir)/$(git_dir)/git-data/
}

attributes(){
  echo $(root_dir)/.gitattributes
}


get_file_from_s3() {
  local remote=$1
  local sha=$2

  aws s3 cp $remote/$(file_name $sha) -
}

get(){
  local sha=$1
  local remote=$(get_remote $2)

  if [ -e $(object_dir)/$sha ]
  then
    cat $(object_dir)/$sha
  else
    get_file_from_s3 $remote $sha
  fi
}

send_file() {
  local remote=$1
  local sha=$2

  rsync -z --progress $(object_dir)$sha $remote/"$(file_name $sha)"
}

send_file_to_s3() {
  local url=$1
  local sha=$2

  local gz=$(object_dir)"$sha.gz"
  gzip $(object_dir)$sha

  aws s3 cp $gz $url/$(file_name $sha)
  rm $gz
}

put() {
  local sha=$1
  local remote=$(get_remote $2)

  send_file_to_s3 $remote $sha
}
